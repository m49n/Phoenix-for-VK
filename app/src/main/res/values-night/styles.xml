<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.App.DayNight.DarkSpecific" parent="Base.App.DayNight">
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">?android:colorBackground
        </item>
    </style>

    <style name="App.DayNight" parent="Base.App.DayNight.DarkSpecific">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="o_mr1">false</item>
        <item name="colorPrimary">#448AFF</item>
        <item name="colorSecondary">#82B1FF</item>
        <item name="colorOnPrimary">#FFF</item>
        <item name="colorOnSecondary">#FFF</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorOnBackground">#ee000000</item>
        <item name="colorSurface">#ee000000</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.AppTheme.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.AppTheme.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.AppTheme.LargeComponent
        </item>
        <item name="floatingActionButtonStyle">@style/Theme.FloatingActionButton</item>
        <item name="icon_color_active">#448AFF</item>

        <item name="dividerColor">#313131</item>

        <item name="dialogs_unread_color">#20b0b0b0</item>
        <item name="navi_menu_color">#00000000</item>
        <item name="navi_menu_selector">@drawable/list_selector_dark</item>

        <item name="messages_background_color">#151515</item>
        <item name="oval_avatar_background">@drawable/sel_button_round_4</item>
        <item name="message_unread_color">#f564b5f6</item>

        <item name="message_bubble_color">#ee000000</item>

        <item name="chat_background_cookies">@drawable/cookies_dark</item>
        <item name="chat_background_lines">@drawable/lines_dark</item>
        <item name="chat_background_runes">@drawable/runes_dark</item>
        <item name="buttonAddPhotoBackground">@drawable/background_rectangle_dash</item>
    </style>

    <style name="QuickReply" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">#1F2226</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="oval_avatar_background">@drawable/sel_button_round_4</item>
        <item name="message_bubble_color">#151515</item>
        <item name="quick_reply_icon_color">#FFF</item>
    </style>

    <style name="Theme.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">3dp</item>
    </style>

    <style name="SpotsDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@android:color/black</item>
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/loading</item>
        <item name="DialogSpotColor">?colorPrimary</item>
        <item name="DialogSpotCount">15</item>
    </style>

</resources>